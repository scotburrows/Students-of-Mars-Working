/// @description Direction + size
// You can write your code in this editor
if (direction = 90){
	sprite_index = up;
}

if (direction = 180){
	sprite_index = left;
	image_xscale = 1.5;
}

if (direction = 270){
	sprite_index = down;
}

if (direction = 0){
	sprite_index = left;
	image_xscale = -1.5;
}