if (direction = 90){
	sprite_index = up_dead;
	image_xscale = 1.5;
	image_yscale = 1.5;
	image_blend = c_red;
}

if (direction = 180){
	sprite_index = left_dead;
	image_xscale = 1;
	image_xscale = 1.5;
	image_yscale = 1.5;
	image_blend = c_red;
}

if (direction = 270){
	sprite_index = down_dead;
	image_xscale = 1.5;
	image_yscale = 1.5;
	image_blend = c_red;
}

if (direction = 0){
	sprite_index = left_dead;
	image_xscale = -1;
	image_xscale = 1.5;
	image_yscale = 1.5;
	image_blend = c_red;
}